=== Indirect Recursion
--- input
\declare:
  foo = \func:
    recurse: \Bool;
  :body:
    foo\if(\recurse, \bar(false))
  \end(func)

  bar = \func:
    recurse: \Bool;
  :body:
    bar\if(\recurse, \foo(false))
  \end(func)
\end(declare)

\foo(true)
\bar(true)
--- ast
+ROOT "standalone"
  >CONTENT
  +CALL
    +TARGET
      +FUNC
        =NAME "concatOf"
      -FUNC
    -TARGET
    +PROTO "items"
      +VARARGS
        =RAW Raw "foobar"
        =RAW Space "\n"
        =RAW Raw "barfoo"
      -VARARGS
    -PROTO
  -CALL
-ROOT
--- expr
+CALL
  =FUNCREF .doc.input.foo
  >ARG recurse
  =ENUM Bool "true"
-CALL
=TEXT Literal "\n"
+CALL
  =FUNCREF .doc.input.bar
  >ARG recurse
  =ENUM Bool "true"
-CALL