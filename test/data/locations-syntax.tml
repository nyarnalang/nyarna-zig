=== Locations syntax
--- input
\block:<syntax locations>
  spam : \Raw
  egg, sausage = \Integer(42); baked : \List(\Text) {varargs};
  beans {primary}= \if(true):
    warbl
  :else:
    wirbl
  \end(if) # comment
  schwurbl : \Bool {}:<syntax locations>:3>
\end(block)
--- rawast
+UCALL
  +TARGET
    =SYMREF [0]block
  -TARGET
  +PROTO primary
    +LOC spam
      +TYPE
        =SYMREF .std.system.Raw
      -TYPE
    -LOC
    +LOC egg
      +DEFAULT
        +RCALL
          =SYMREF .std.system.Integer
          >ARG input
          =TEXT Raw "42"
        -RCALL
      -DEFAULT
    -LOC
    +LOC sausage
      +DEFAULT
        +RCALL
          =SYMREF .std.system.Integer
          >ARG input
          =TEXT Raw "42"
        -RCALL
      -DEFAULT
    -LOC
    +LOC baked
      +TYPE
        +RCALL
          =SYMREF .std.system.List
          >ARG inner
          +AST
            =SYMREF .std.system.Text
          -AST
        -RCALL
      -TYPE
      =FLAGS {varargs}
    -LOC
    +LOC beans
      =FLAGS {primary}
      +DEFAULT
        +RCALL
          =SYMREF .std.system.if
          >ARG condition
          +AST
            =LIT text "true"
          -AST
          >ARG then
          +AST
            =LIT text "warbl"
          -AST
          >ARG else
          +AST
            =LIT text "wirbl"
          -AST
        -RCALL
      -DEFAULT
    -LOC
    +LOC schwurbl
      +TYPE
        =SYMREF .std.system.Bool
      -TYPE
      =FLAGS {}:<syntax locations>:3>
    -LOC
  -PROTO
-UCALL