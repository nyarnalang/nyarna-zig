=== Locations syntax
--- input
\block:<syntax locations>
  spam : \Raw
  egg, sausage = \Integer(42); baked : \List(\Text) {varargs};
  beans {primary}= \if(true):
    warbl
  :else:
    wirbl
  \end(if) # comment
  schwurbl : \Boolean {}:<syntax locations>:3>
\end(block)
--- rawast
+UCALL
  +TARGET
    =SYMREF [0]block
  -TARGET
  +PROTO primary
    +LOC spam
      +TYPE
        =SYMREF <intrinsic>.Raw
      -TYPE
    -LOC
    +LOC egg
      +DEFAULT
        +RCALL
          =SYMREF <intrinsic>.Integer
          >ARG input
          =NUMBER Integer 42
        -RCALL
      -DEFAULT
    -LOC
    +LOC sausage
      +DEFAULT
        +RCALL
          =SYMREF <intrinsic>.Integer
          >ARG input
          =NUMBER Integer 42
        -RCALL
      -DEFAULT
    -LOC
    +LOC baked
      +TYPE
        +RCALL
          =SYMREF <intrinsic>.List
          >ARG inner
          +AST
            =SYMREF [0]Text
          -AST
        -RCALL
      -TYPE
      =FLAGS {varargs}
    -LOC
    +LOC beans
      =FLAGS {primary}
      +DEFAULT
        +RCALL
          =SYMREF <intrinsic>.if
          >ARG condition
          +AST
            =LIT text "true"
          -AST
          >ARG then
          +AST
            =LIT text "warbl"
          -AST
          >ARG else
          +AST
            =LIT text "wirbl"
          -AST
        -RCALL
      -DEFAULT
    -LOC
    +LOC schwurbl
      +TYPE
        =SYMREF <intrinsic>.Boolean
      -TYPE
      =FLAGS {}:<syntax locations>:3>
    -LOC
  -PROTO
-UCALL