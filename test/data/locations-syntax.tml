=== Locations syntax
--- input
\block:<syntax locations>
  spam : \Raw
  egg, sausage = \Integer(42); baked : \List(\Text) {varargs};
  beans {primary}= \if(true):
    warbl
  :else:
    wirbl
  \end(if) # comment
  schwurbl : \Bool {}:<syntax locations>:3>
\end(block)
--- rawast
+RCALL
  =SYMREF .std.system.block
  >ARG content
  +AST
    +LOC
      =LIT text "spam"
      =SYMREF .std.system.Raw
    -LOC
    +LOC
      =LIT text "egg"
      =TYPE <none>
      +DEFAULT
        +RCALL
          =SYMREF .std.system.Integer
          >ARG input
          =TEXT Raw "42"
        -RCALL
      -DEFAULT
    -LOC
    +LOC
      =LIT text "sausage"
      =TYPE <none>
      +DEFAULT
        +RCALL
          =SYMREF .std.system.Integer
          >ARG input
          =TEXT Raw "42"
        -RCALL
      -DEFAULT
    -LOC
    +LOC
      =LIT text "baked"
      +TYPE List
        =TYPE textual .std.system.Text
      -TYPE
      =FLAGS {varargs}
    -LOC
    +LOC
      =LIT text "beans"
      =TYPE <none>
      =FLAGS {primary}
      +DEFAULT
        +BRANCHES
          =ENUM Bool "true"
          >BRANCH 0
          =TEXT Literal "wirbl"
          >BRANCH 1
          =TEXT Literal "warbl"
        -BRANCHES
      -DEFAULT
    -LOC
    +LOC
      =LIT text "schwurbl"
      =SYMREF .std.system.Bool
      =FLAGS {}:<syntax locations>:3>
    -LOC
  -AST
-RCALL